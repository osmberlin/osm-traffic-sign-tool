  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "bleach": "rm -rf node_modules/ && rm -rf .next/ && npm install",
    "type-check": "tsc --skipLibCheck --noEmit",
    "lint": "next lint",
    "format": "prettier . --write",
    "check": "npm run type-check && npm run format && npm run lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "updatePackages:major": "npx taze major --includeLocked --write --exclude eslint && npm run updatePackages:minor && npm install",
    "updatePackages:minor": "npx taze minor --includeLocked --write && npm install",
    "prepare": "husky"
  },
  "dependencies": {
    "@headlessui/react": "^2.1.8",
    "@heroicons/react": "^2.1.5",
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.4",
    "next": "14.2.11",
    "nuqs": "^1.19.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "prettier-plugin-organize-imports": "^4.0.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/react": "^16.0.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^8.56.12",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.11",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-51a85ea-20240601",
    "husky": "^9.1.6",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.45",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "vitest": "^2.1.0"
  }
}
