{
  "name": "osm-traffic-sign-tool",
  "version": "2.1.1",
  "private": true,
  "description": "Get OpenStreetMap tagging recommendations based on traffic sign combinations.",
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "npx serve out",
    "bleach": "rm -rf .turbo && rm -rf node_modules && rm -rf .next/",
    "type-check": "tsc --skipLibCheck --noEmit",
    "lint": "next lint",
    "format": "prettier . --write",
    "check": "npm run type-check && npm run format && npm run lint",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch --passWithNoTests",
    "local-release": "changeset version && changeset publish && git push",
    "prepublishOnly": "npm run check",
    "updatePackages:major": "npx taze major --includeLocked --write --exclude eslint && npm run updatePackages:minor && npm install",
    "updatePackages:minor": "npx taze minor --includeLocked --write",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.9",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.1.5",
    "@osm-traffic-signs/converter": "workspace:*",
    "@internal/taginfo": "workspace:*",
    "@internal/wiki": "workspace:*",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.10",
    "next": "14.2.16",
    "nuqs": "^1.20.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@testing-library/react": "^16.0.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/eslint": "^8.56.12",
    "@types/node": "^20.17.4",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.16",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-51a85ea-20240601",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
