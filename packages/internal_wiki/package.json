{
  "name": "@internal/wiki",
  "type": "module",
  "private": true,
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run build:ts && npm run build:copy-svgs",
    "build:ts": "tsc",
    "build:copy-svgs": "copyfiles --flat './src/data/svgs/*' './dist/data/svgs'",
    "wiki": "npm run wiki:downloadWiki && npm run wiki:parseWiki && npm run wiki:downloadSvgs",
    "wiki:downloadWiki": "bun ./src/downloadWiki/downloadWiki.ts && prettier ./ --write",
    "wiki:parseWiki": "bun ./src/parseWiki/parseWiki.ts && prettier ./ --write",
    "wiki:downloadSvgs": "bun ./src/downloadSvgs/downloadSvgs.ts && prettier ./src/data/svgs/ --write"
  },
  "devDependencies": {
    "@osm-traffic-signs/converter": "workspace:*",
    "cheerio": "^1.0.0",
    "copyfiles": "^2.4.1",
    "typescript": "^5.0.0",
    "zod": "^3.23.8"
  }
}
