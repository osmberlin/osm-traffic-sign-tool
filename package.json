{
  "name": "osm-traffic-sign-tools-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "lint": "turbo run lint",
    "bleach": "turbo run bleach && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "updatePackages:major": "pnpm dlx taze -r major --includeLocked --write && pnpm install",
    "updatePackages:minor": "pnpm dlx taze -r minor --includeLocked --write && pnpm install"
  },
  "devDependencies": {
    "@colors/colors": "^1.6.0",
    "@types/bun": "latest",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svgo": "^4.0.0",
    "turbo": "^2.6.3",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=22.21.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
